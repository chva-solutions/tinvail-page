---
const { id, title, description, collections } = Astro.props;
---

<section id={id} class="section-block">
  <div class="container-custom space-y-10">
    <div class="space-y-3">
      <p class="section-label">Collections</p>
      <h2 class="font-display text-3xl text-ink sm:text-4xl">{title}</h2>
      <p class="text-ink-soft max-w-xl">{description}</p>
    </div>
    <div class="grid gap-6 grid-cols-2 md:grid-cols-3">
      {collections.map((collection) => (
        <a class="collection-card" href={collection.href}>
          <img src={collection.image} alt={collection.alt} loading="lazy" width="600" height="420" />
          <div class="collection-meta">
            <span>{collection.label}</span>
            <span class="collection-cta">Explore</span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
