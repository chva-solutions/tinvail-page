---
import Layout from '../layouts/Layout.astro';

const collection = [
  {
    title: 'Coastal Light',
    location: 'Example scene: veranda by the sea with palms',
    mood: 'Mood: airy, elegant, sunlit',
    image: '/images/azure-veranda.jpeg',
    alt: 'Watercolor scene of a woman in a white dress walking along a seaside veranda with palm trees.',
  },
  {
    title: 'Sunbreak Shore',
    location: 'Example scene: shoreline with radiant sky',
    mood: 'Mood: hopeful, open, expansive',
    image: '/images/sunbreak-shore.jpeg',
    alt: 'Watercolor scene of a woman on a beach beneath dramatic clouds and sun rays over the ocean.',
  },
  {
    title: 'Forest Retreat',
    location: 'Example scene: quiet path toward a cabin',
    mood: 'Mood: grounded, fresh, nostalgic',
    image: '/images/crimson-cabin.jpeg',
    alt: 'Watercolor scene of a woman walking toward a red cabin in a lush forest clearing.',
  },
  {
    title: 'Morning Tide',
    location: 'Example scene: calm beach with a wooden boat',
    mood: 'Mood: soft breeze, slow pace, wanderlust',
    image: '/images/longtail-morning.jpeg',
    alt: 'Watercolor scene of a woman on a beach beside a wooden longtail boat and turquoise water.',
  },
  {
    title: 'Evening Glow',
    location: 'Example scene: dusk reflections on the water',
    mood: 'Mood: dreamy, reflective, poetic',
    image: '/images/evening-tide.jpeg',
    alt: 'Watercolor scene of a silhouetted woman at sunset on a beach with colorful sky reflections.',
  },
  {
    title: 'Hidden Falls',
    location: 'Example scene: waterfall tucked in the jungle',
    mood: 'Mood: lush, serene, renewing',
    image: '/images/emerald-falls.jpeg',
    alt: 'Watercolor scene of a woman in a white dress looking at a jungle waterfall surrounded by greenery.',
  },
];

const highlights = [
  {
    title: 'A daily escape',
    description: 'Bring a soft pause to your home or office and leave the everyday behind for a moment.',
  },
  {
    title: 'Designed for her success',
    description: 'Poised heroines and calm palettes that feel refined, confident, and quietly luxurious.',
  },
  {
    title: 'Watercolor atmosphere',
    description: 'Layered washes and gentle light create a dreamy, soothing presence on the wall.',
  },
];

const steps = [
  {
    title: 'Choose an example scene',
    description: 'Pick the mood that mirrors your next escape, from ocean calm to forest quiet.',
  },
  {
    title: 'Select size and finish',
    description: 'Available in 12" x 18" or 24" x 36", matte or semi-gloss.',
  },
  {
    title: 'Hang and exhale',
    description: 'Frame it, place it, and let the room breathe.',
  },
];

const notes = [
  {
    title: 'Matte or semi-gloss',
    description: 'Choose the surface that fits your light and your space.',
  },
  {
    title: 'Standard sizes',
    description: 'Designed to fit common frames for easy styling.',
  },
  {
    title: 'Soft, luminous color',
    description: 'A palette that brings calm without losing presence.',
  },
];
---

<Layout title="Tinvail | dreaming starts with open eyes">
  <div class="relative overflow-hidden gradient-veil grain hero-full">
    <div class="watercolor-orb blush" style="width: 360px; height: 360px; top: -120px; left: -120px;"></div>
    <div class="watercolor-orb sky" style="width: 260px; height: 260px; top: 40px; right: -80px;"></div>
    <div class="watercolor-orb lilac" style="width: 320px; height: 320px; bottom: -160px; right: 12%;"></div>

    <header class="container-custom header-shell relative z-10 flex items-center justify-between py-6">
      <div class="logo-badge">
        <img src="/logo.png" alt="Tinvail logo" class="h-9 w-auto" />
      </div>
      <nav class="hidden items-center gap-8 text-sm font-semibold text-ink-soft lg:flex lg:mx-10 xl:mx-16">
        <a class="hover:text-ink transition" href="#collection">Collection</a>
        <a class="hover:text-ink transition" href="#craft">Craft</a>
        <a class="hover:text-ink transition" href="#story">Story</a>
        <a class="hover:text-ink transition" href="#faq">FAQ</a>
      </nav>
      <div class="flex items-center gap-3">
        <a class="btn-outline hidden sm:inline-flex" href="#collection">View gallery</a>
        <a class="btn-primary" href="#collection">Shop the collection</a>
      </div>
    </header>

    <section class="container-custom relative z-10 grid items-center gap-12 pb-24 pt-10 lg:grid-cols-[1.05fr_0.95fr]">
      <div class="space-y-6">
        <p class="section-label animate-rise">Tinvail watercolor posters</p>
        <h1 class="font-display text-4xl leading-tight text-ink sm:text-5xl lg:text-6xl">
          dreaming starts with open eyes
        </h1>
        <p class="text-lg text-ink-soft animate-rise delay-1">
          For women who want a break from the everyday, who dream of faraway places, and who want their home or office to feel like a window to the horizon. Tinvail captures women in sunlit scenes that awaken longing and a sense of adventure.
        </p>
        <div class="flex flex-wrap gap-4 animate-rise delay-2">
          <a class="btn-primary" href="#collection">Explore the scenes</a>
          <a class="btn-outline" href="#story">Read the story</a>
        </div>
        <div class="flex flex-wrap gap-6 text-sm text-ink-soft animate-rise delay-3 mb-5 pl-5">
          <div class="flex items-center gap-2">
            <span class="h-2 w-2 rounded-full bg-rose"></span>
            <span>Example scenes from a growing collection</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="h-2 w-2 rounded-full bg-sky"></span>
            <span>Matte or semi-gloss finish</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="h-2 w-2 rounded-full bg-lilac"></span>
            <span>Two sizes: 12" x 18" and 24" x 36"</span>
          </div>
        </div>
      </div>

      <div class="hero-stack-right animate-rise delay-1">
        <img src="/images/azure-veranda.jpeg" alt="Coastal Light poster" class="stack-left" loading="lazy" />
        <img src="/images/evening-tide.jpeg" alt="Evening Glow poster" class="stack-top" loading="lazy" />
        <img src="/images/crimson-cabin.jpeg" alt="Forest Retreat poster" class="stack-bottom" loading="lazy" />
      </div>
    </section>
  </div>

  <section class="container-custom py-28 mb-16">
    <div class="grid gap-10 md:grid-cols-3">
      {highlights.map((item) => (
        <div class="card-soft reveal my-6">
          <h3 class="font-display text-2xl text-ink">{item.title}</h3>
          <p class="mt-3 text-sm text-ink-soft">{item.description}</p>
        </div>
      ))}
    </div>
  </section>

  <section id="collection" class="container-custom py-28">
    <div class="flex flex-wrap items-end justify-between gap-10">
      <div>
        <p class="section-label">Signature collection</p>
        <h2 class="font-display text-4xl text-ink">Example scenes that spark longing.</h2>
        <p class="mt-3 max-w-xl text-ink-soft">
          Each watercolor scene pairs a thoughtful heroine with a destination that feels cinematic yet personal. The scenes below are examples from a growing collection.
        </p>
      </div>
      <a class="btn-primary" href="#craft">See print details</a>
    </div>

    <div class="mt-16 grid gap-10 md:grid-cols-2 lg:grid-cols-3">
      {collection.map((poster) => (
        <article class="card-collection reveal">
          <img src={poster.image} alt={poster.alt} class="h-64 w-full object-cover" loading="lazy" />
          <div class="p-6">
            <h3 class="font-display text-2xl text-ink">{poster.title}</h3>
            <p class="mt-2 text-sm text-ink-soft">{poster.location}</p>
            <p class="mt-3 text-sm text-ink">{poster.mood}</p>
            <div class="mt-5 text-xs font-semibold uppercase tracking-wider text-ink-soft">
              <span>Two sizes available</span>
            </div>
          </div>
        </article>
      ))}
    </div>
  </section>

  <section id="craft" class="relative overflow-hidden py-28">
    <div class="absolute inset-0 bg-gradient-to-br from-cloud via-pearl to-mist"></div>
    <div class="container-custom relative z-10 grid gap-12 lg:grid-cols-[1.1fr_0.9fr]">
      <div class="space-y-6">
        <p class="section-label">The craft</p>
        <h2 class="font-display text-4xl text-ink">Prints that hold light and distance.</h2>
        <p class="text-ink-soft">
          We translate the softness of watercolor into tactile prints: gentle texture, smooth gradients, and colors calibrated to glow in natural light.
        </p>
        <div class="grid gap-6 sm:grid-cols-2">
          {notes.map((note) => (
            <div class="card-soft reveal">
              <h3 class="text-lg font-semibold text-ink">{note.title}</h3>
              <p class="mt-2 text-sm text-ink-soft">{note.description}</p>
            </div>
          ))}
        </div>
      </div>
      <div class="card-collection reveal">
        <img src="/images/emerald-falls.jpeg" alt="Hidden Falls poster" class="h-full w-full object-cover" loading="lazy" />
      </div>
    </div>
  </section>

  <section id="story" class="container-custom py-32 mt-12">
    <div class="grid gap-16 lg:grid-cols-[0.9fr_1.1fr] items-start pt-8">
      <div class="card-collection reveal self-start">
        <img src="/images/longtail-morning.jpeg" alt="Morning Tide poster" class="block w-full h-auto" loading="lazy" />
      </div>
      <div class="space-y-10">
        <p class="section-label">tinvail — Brand Story</p>
        <h2 class="font-display text-4xl text-ink">
          She didn’t travel to collect places.<br />She traveled to collect moments.
        </h2>
        <div class="space-y-5 text-ink-soft leading-relaxed max-w-xl">
          <p>
            For seven years, she moved through the world slowly — climbing ancient steps in jungle heat, walking quiet
            mountain paths, standing still while the ocean breathed beneath her.
          </p>
          <p>Some memories were too soft to photograph. Too fleeting to write down. So she painted them.</p>
          <p>
            Each artwork became a self-portrait without a face — a moment translated into watercolor, a feeling held
            gently, before it could disappear.
          </p>
          <p>
            tinvail was born from that habit of holding on without trying to own.
          </p>
          <p>
            Today, those memories are no longer just hers. They live as windows — not to specific destinations, but to
            states of mind.
          </p>
          <p>A pause. A breath. A sense of being somewhere else, even while standing still.</p>
          <p>
            tinvail exists for those who know that escape doesn’t always require distance — only attention.
          </p>
          <p>Because dreaming doesn’t begin when your eyes close. It begins when you dare to look.</p>
        </div>
        <p class="font-display text-xl text-ink">Dreaming starts with open eyes.</p>
        <div class="flex flex-wrap gap-4">
          <a class="btn-primary" href="#collection">Find your scene</a>
          <a class="btn-outline" href="#how-it-works">How it works</a>
        </div>
      </div>
    </div>
  </section>

  <section id="how-it-works" class="container-custom py-32">
    <div class="flex flex-col gap-8 lg:flex-row lg:items-end lg:justify-between">
      <div class="space-y-4 max-w-xl">
        <p class="section-label">How it works</p>
        <h2 class="font-display text-4xl text-ink">Find your scene.</h2>
        <p class="text-ink-soft">
          Three calm steps from the mood that calls you to a finished print on your wall.
        </p>
      </div>
      <a class="btn-outline" href="#collection">Explore the scenes</a>
    </div>
    <div class="mt-12 grid gap-10 md:grid-cols-3">
      {steps.map((step, index) => (
        <div class="card-soft reveal my-6">
          <p class="text-xs font-semibold uppercase tracking-widest text-ink-soft">STEP {index + 1}</p>
          <h3 class="mt-3 font-display text-2xl text-ink">{step.title}</h3>
          <p class="mt-2 text-sm text-ink-soft">{step.description}</p>
        </div>
      ))}
    </div>
  </section>

  <section class="container-custom py-32">
    <div class="grid gap-16 lg:grid-cols-[1.1fr_0.9fr] items-start">
      <div class="space-y-10">
        <p class="section-label">Collector notes</p>
        <h2 class="font-display text-4xl text-ink">Rooms with a view.</h2>
        <p class="text-ink-soft max-w-xl">
          From home offices to living rooms, Tinvail posters are chosen for spaces that value calm, light, and a sense of freedom.
        </p>
        <div class="space-y-8">
          <div class="card-soft reveal">
            <p class="text-sm text-ink-soft">"The colors are soft but confident. My office feels instantly bigger."</p>
            <p class="mt-3 text-xs font-semibold uppercase tracking-widest text-ink-soft">Interior stylist, Copenhagen</p>
          </div>
          <div class="card-soft reveal">
            <p class="text-sm text-ink-soft">"It feels like a tiny vacation every morning. The finish is beautiful."</p>
            <p class="mt-3 text-xs font-semibold uppercase tracking-widest text-ink-soft">Collector, Lisbon</p>
          </div>
        </div>
      </div>
      <div class="card-collection reveal self-start">
        <img src="/images/sunbreak-shore.jpeg" alt="Sunbreak Shore poster" class="block w-full h-auto" loading="lazy" />
      </div>
    </div>
  </section>

  <section id="faq" class="container-custom py-32 mt-20">
    <div class="grid gap-16 lg:grid-cols-[0.95fr_1.05fr]">
      <div class="space-y-6 pt-8">
        <p class="section-label">FAQ</p>
        <h2 class="font-display text-4xl text-ink">Everything you need to know.</h2>
        <p class="text-ink-soft">Sizing, materials, and delivery details for your Tinvail poster.</p>
      </div>
      <div class="grid gap-8 pt-8">
        <div class="card-soft reveal">
          <h3 class="text-lg font-semibold text-ink">What sizes are available?</h3>
          <p class="mt-2 text-sm text-ink-soft">
            12" x 18" (Vertical) — 30.48 x 45.72 cm<br />
            24" x 36" (Vertical) — 60.96 x 91.44 cm
          </p>
        </div>
        <div class="card-soft reveal">
          <h3 class="text-lg font-semibold text-ink">Do the posters include frames?</h3>
          <p class="mt-2 text-sm text-ink-soft">Frames are not included, so you can choose the style that fits your space.</p>
        </div>
        <div class="card-soft reveal">
          <h3 class="text-lg font-semibold text-ink">What paper finishes are available?</h3>
          <p class="mt-2 text-sm text-ink-soft">Choose between matte or semi-gloss paper quality.</p>
        </div>
        <div class="card-soft reveal">
          <h3 class="text-lg font-semibold text-ink">How are orders packaged?</h3>
          <p class="mt-2 text-sm text-ink-soft">Prints are protected with tissue and sturdy packaging to keep them flawless.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="relative overflow-hidden py-24">
    <div class="absolute inset-0 bg-gradient-to-r from-pearl via-cloud to-mist"></div>
    <div class="container-custom relative z-10">
      <div class="card-soft text-center reveal">
        <p class="section-label">Ready</p>
        <h2 class="font-display text-4xl text-ink">Bring the escape home.</h2>
        <p class="mt-3 text-ink-soft">Choose your scene and let the daydream begin on your walls.</p>
        <div class="mt-6 flex flex-wrap justify-center gap-4">
          <a class="btn-primary" href="#collection">Shop now</a>
          <a class="btn-outline" href="mailto:studio@tinvail.com">Ask a question</a>
        </div>
      </div>
    </div>
  </section>

  <footer class="border-t border-black/5 py-12">
    <div class="container-custom flex flex-col items-start justify-between gap-8 lg:flex-row">
      <div class="space-y-4">
        <div class="logo-badge">
          <img src="/logo.png" alt="Tinvail" class="h-9 w-auto" />
        </div>
        <p class="text-sm text-ink-soft">Watercolor posters for dreamers. Calm, curated, and ready to frame.</p>
      </div>
      <div class="grid gap-4 text-sm text-ink-soft">
        <span>hello@tinvail.com</span>
        <span>Instagram: @tinvail</span>
        <span>Worldwide shipping available</span>
      </div>
      <div class="text-xs text-ink-soft">(c) 2024 Tinvail. All rights reserved.</div>
    </div>
  </footer>

  <script is:inline>
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      },
      { threshold: 0.2 }
    );

    document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));
  </script>
</Layout>
