---

<Layout
  title="Tinvail | Modern travel-inspired art prints"
  description="Shop modern travel-inspired art prints. Museum-grade quality, curated scenes, and fast worldwide shipping."
>
  <SiteHeader logoUrl={logoUrl} navLinks={navLinks} ctaLinks={headerCtas} />

  <main>
    <HeroSection {...heroContent} />

    <ProductGrid
      id="bestsellers"
      title="Bestsellers"
      description="Shop the most loved prints, ready to frame and style."
      products={bestsellers}
      cta={{ label: 'View all bestsellers', href: '#collections' }}
    />

    <CollectionGrid
      id="collections"
      title="Choose your vibe"
      description="Explore curated collections by mood and destination."
      collections={collections}
    />

    <FeatureList
      id="why"
      title="Why collectors choose Tinvail"
      features={features}
    />

    <FaqTeaser
      id="faq"
      title="Shipping, returns, and quality"
      description="Everything you need to know before you order."
      items={faqItems}
      cta={{ label: 'Read full shipping details', href: '/shipping' }}
    />

    <AboutSection id="about" {...aboutContent} />
  </main>

  <SiteFooter
    logoUrl={logoUrl}
    navLinks={footerLinks}
    legalLinks={legalLinks}
    socialLinks={socialLinks}
  />
</Layout>
